<div class="widget">
    <form class="form-inline form" role="form">
        <div class="search-wrap">
            <input data-folder="_stores" type="text" class="form-control search-field mobile_folder_search" placeholder="Поиск товаров">
        </div>
    </form>
</div>
<div class="widget">
    <h5 class="widget-title font-alt">Категории</h5>
    <div class="widget-body">
        <ul class="clearlist widget-menu">
          <% for category in store_cats.iter() { %>
            <li>
                <a class="ajax" href="/stores/<%= category.id %>/"><%= category.name %></a>
                <small>
                    - <%= category.count %>
                </small>
            </li>
            <% } %>
        </ul>
    </div>
</div>

<% if all_tags.len() > 0 { %>
<div class="widget">
    <h5 class="widget-title font-alt">Теги (<%= all_tags.len() %>)</h5>
    <div class="widget-body">
        <div class="tags">
          <% for tag in all_tags.iter() { %>
            <a class="ajax" href="/tag/<%= tag.id %>/"><%= tag.name %> (<%= tag.count %>)</a>
          <% } %>
        </div>
    </div>
</div>
<% } %>

