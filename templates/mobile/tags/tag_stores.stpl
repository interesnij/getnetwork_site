<% include!("../header.stpl"); %>

<section class="bg-gray-lighter" style="padding-top: 90px;">
    <div class="relative container align-left">
        <div class="hs-line-4 font-alt black">
          <a class="ajax" href="/">Главная</a>
            &nbsp;/&nbsp;
          <a class="ajax" href="/tags/">Ключевые слова</a>
            &nbsp;/&nbsp;
          <a class="ajax" href="/tag/<%= tag.id %>/"><%= tag.name %></a>
        </div>
    </div>
</section>
<section class="page-section">
    <div class="container relative">
      <% if stores_count > 0 { %>
      <section class="page-section">
          <div class="container relative">
              <h2 class="section-title font-alt align-left mb-70 mb-sm-40">
                  Статьи блога (<%= stores_count %>)
              </h2>
              <div class="row multi-columns-row">
                <% for object in stores_list.iter() { %>
                  <% include!("../generic/default_store.stpl"); %>
                <% } %>
                <% if next_page_number > 0 { %>
                  <div class="load centered m-1 next_page_list" data-link="/tag_stores/<%= tag.id %>/?page=<%= next_page_number %>">
                    <img src="/static/images/preloader.gif">
                  </div>
                <% } %>
              </div>
          </div>
      </section>
      <% } %>
    </div>
</section>

<% include!("../footer.stpl"); %>
